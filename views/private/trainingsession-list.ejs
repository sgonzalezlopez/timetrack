<link rel="stylesheet" href="/bootstrap-table/bootstrap-table.min.css">
<div class="card">
	<div class="card-body">
		<h5 class="card-title"><%= __('trainingsession') %></h5>
		<div class="table-responsive">
			<table id="table" data-toggle="table" data-sortable="true" data-url="/api/trainingsession" class="table table-striped table-bordered">
				<thead>
					<tr>
						<th data-field="name" data-sortable="true">
							<%= __('COL_name') %>
						</th>
						<th data-field="date" data-sortable="true" data-formatter="core.formatters.date">
							<%= __('COL_date') %>
						</th>
						<th data-field="race" data-sortable="true">
							<%= __('COL_race') %>
						</th>
						<th data-field="distance" data-sortable="true">
							<%= __('COL_distance') %>
						</th>
						<th data-field="heats" data-sortable="true">
							<%= __('COL_heats') %>
						</th>
						<th data-field="competition.fullname" data-sortable="true">
							<%= __('COL_competition') %>
						</th>
						<th data-field="id" data-formatter="actionFormatter" data-align="center" data-events="actionEvents">
							<%= __('COL_actions') %>
						</th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
</div>

<script>
	function actionFormatter(value, row, index) {
		return [
			'<a class="view" href="/private/trainingsession/' + row._id + '/skater-inputs" title="">',
			'<i class="fa fa-eye"></i>',
			"</a> ",
		].join("");
	}
</script>