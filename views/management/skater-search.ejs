<link rel="stylesheet" type="text/css" href="/assets/libs/select2/dist/css/select2.min.css" />
<link rel="stylesheet" type="text/css" href="/assets/libs/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" />
<link rel="stylesheet" href="/bootstrap-table/bootstrap-table.min.css">
<div class="card">
	<form id="SkaterForm" class="form-horizontal">
		<div class="card-body">
			<div type="button" data-bs-toggle="collapse" data-bs-target="#searchpanel" aria-expanded="false" aria-controls="searchpanel">
				<h4 class="card-title"><i class="fas fa-angle-double-up"></i>
					<%= __('Search Criteria') %>
				</h4>
			</div>
			<div class="show" id="searchpanel">
				<div class="row">
					<div class="form-group row col-md-6">
						<label for="name" class="col-sm-3 text-end control-label col-form-label">
							<%= __('MODEL_Skater_name')%>
						</label>
						<div class="col-sm-9">
							<input type="text" class="form-control" id="name" name="name" placeholder="" value="<%= locals.object ? object['name'] : '' %>" />
						</div>
					</div>
					<div class="form-group row col-md-6">
						<label for="lastname" class="col-sm-3 text-end control-label col-form-label">
							<%= __('MODEL_Skater_lastname')%>
						</label>
						<div class="col-sm-9">
							<input type="text" class="form-control" id="lastname" name="lastname" placeholder="" value="<%= locals.object ? object['lastname'] : '' %>" />
						</div>
					</div>
				</div>
				<div class="row">
					<div class="form-group row col-md-6">
						<label for="currentclub" class="col-sm-3 text-end control-label col-form-label">
							<%= __('MODEL_Skater_currentclub')%>
						</label>
						<div class="col-sm-9">
							<select id="currentclub" name="currentclub" class="select2 form-select shadow-none" style="width:100%; height: 36px" data-collection="Club" data-show="name" data-value="<%=locals.object && locals.object.currentclub ? object.currentclub._id : '' %>"></select> %>
						</div>
					</div>
					<div class="form-group row col-md-6">
						<label for="currentcategory" class="col-sm-3 text-end control-label col-form-label">
							<%= __('MODEL_Skater_currentcategory')%>
						</label>
						<div class="col-sm-9">
							<select id="currentcategory" name="currentcategory" class="select2 form-select shadow-none" style="width:100%; height: 36px" data-value-list="categories" data-value="<%=locals.object && locals.object.currentcategory ? object.currentcategory : '' %>"></select> %>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="form-group row col-md-6">
						<label for="gender" class="col-sm-3 text-end control-label col-form-label">
							<%= __('MODEL_Skater_gender')%>
						</label>
						<div class="col-sm-9">
							<select id="gender" name="gender" class="select2 form-select shadow-none" style="width:100%; height: 36px" data-value-list="gender" data-value="<%=locals.object && locals.object.gender ? object.gender : '' %>"></select> %>
						</div>
					</div>
					<div class="form-group row col-md-6">
						<label for="country" class="col-sm-3 text-end control-label col-form-label">
							<%= __('MODEL_Skater_country')%>
						</label>
						<div class="col-sm-9">
							<select id="country" name="country" class="select2 form-select shadow-none" style="width:100%; height: 36px" data-value-list="country" data-value="<%=locals.object && locals.object.country ? object.country : '' %>"></select> %>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="form-group row col-md-6">
						<label for="birthDate" class="col-sm-3 text-end control-label col-form-label">
							<%= __('MODEL_Skater_birthDate')%>
						</label>
						<div class="col-sm-9">
							<div class="input-group">
								<input type="text" class="form-control mydatepicker" placeholder="<%=__('DATE_FORMAT')%>" id="birthDate" name="birthDate" value="<%= locals.object ? object['birthDate'] : '' %>" />
								<div class="input-group-append">
									<span class="input-group-text h-100"><i class="mdi mdi-calendar"></i></span>
								</div>
							</div>
						</div>
					</div>
					<div class="form-group row col-md-6">
						<label for="active" class="col-sm-3 text-end control-label col-form-label">
							<%= __('MODEL_Skater_active')%>
						</label>
						<div class="col-sm-9">
							<div class="input-group">
								<select id="active" name="active" class="select2 form-select shadow-none" style="width:100%; height: 36px" data-value-boolean="true" data-value=""></select>
							</div>
						</div>
					</div>
					<div data-type="search-buttons" data-api="/api/skater" data-table="#table" <%=locals.permissions.includes('C') ? 'data-new' : ''%> data-panel="#searchpanel" data-form="SkaterForm"></div>
				</div>
			</div>
	</form>
</div>
<div class="card">
	<div class="card-body">
		<h5 class="card-title">Skater</h5>
		<div class="table-responsive">
			<table id="table" data-toggle="table" data-sortable="true" data-api="/api/skater" class="table table-striped table-bordered clickable" detail-url="/management/skater/">
				<thead>
					<tr>
						<th data-field="name" data-sortable="true">
							<%= __('COL_name') %>
						</th>
						<th data-field="lastname" data-sortable="true">
							<%= __('COL_lastname') %>
						</th>
						<th data-field="currentclub.name" data-sortable="true">
							<%= __('COL_currentclub') %>
						</th>
						<th data-field="currentcategory" data-sortable="true">
							<%= __('COL_currentcategory') %>
						</th>
						<th data-field="gender" data-sortable="true">
							<%= __('COL_gender') %>
						</th>
						<th data-field="country" data-sortable="true">
							<%= __('COL_country') %>
						</th>
						<th data-field="birthDate" data-sortable="true" data-formatter="core.formatters.date">
							<%= __('COL_birthDate') %>
						</th>
						<th data-field="active" data-sortable="true" data-formatter="core.formatters.boolean">
							<%= __('COL_active') %>
						</th>
						<th data-field="id" data-formatter="actionFormatter" data-align="center" data-events="actionEvents">
							<%= __('COL_actions') %>
						</th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
</div>

<script>
	function actionFormatter(value, row, index) {
		return [
			'<a class="view" href="/management/skater/' + row._id + '" title="">',
			'<i class="fa fa-eye"></i>',
			"</a> ",
			'<%-permissions.includes("D") ? `<a class="delete" href="javascript:void(0)" title=""><i class="fa fa-trash"></i></a>`: ``%>'
		].join("");
	}
	$('#SkaterForm_search_btn').click(() => {
		values = core.forms.parse('SkaterForm')
		core.api.find('/api/skater', values, (data) => {
			$('#table').bootstrapTable('load', data)
		})
	})
</script>
<% if(locals.permissions.includes('C')) { %>
<script>
	$("#SkaterForm_new_btn").click(() => {
		window.location.href = '/<%= locals.detail%>'
	})
</script>
<% } %>